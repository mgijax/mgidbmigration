#!/bin/csh -f

#
# Usage:  HMD.drop $DSQUERY $MGD
#
# $DSQUERY = database server
# $MGD = database
#
# Example:  HMD.drop MGD_DEV mgd_new
#
#

setenv DSQUERY $1

set scripts = ~sybase/admin
set sql = /tmp/$$.sql

cat > $sql << EOSQL

use $2
go

checkpoint
go

drop trigger HMD_Homology_Delete
go

drop trigger HMD_Homology_Insert
go

drop trigger HMD_Reference_Delete
go

drop trigger HMD_Assay_Delete
go

checkpoint
go

quit

EOSQL

$scripts/dbo_sql $sql
rm $sql

